<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="text-center">Enter your gig details</div>
            <br />

            <div class="new-gig-card">
                <form-method="post">
                    <div class="form-group">
                        <label>Gig Title</label>
                        <input type="text" class="form-control" placeholder="I will do something" name="gig_title">

                    </div>
                    <div class="form-group">
                        <label>Gig price</label>
                        <input type="text" class="form-control" placeholder="Rs.500" name="gig_price">

                    </div>
                    <div class="form-group">
                        <label>Gig Category</label>
                        <div class="custom-select" >
                        <select class="form_control" name="gig_category" style="width:200px;"aria-placeholder="Choose" >
                            <option selected="selected">Other</option>            
                            <option>Graphic Design</option>
                            <option>Content Writing</option>
                            <option>Video Editing</option>
                            <option>Photography</option>
                        </select> 
                        </div>                       

                    </div>
                        </div>
                    <div class="form-group input-group-lg">
                        <label>About the Gig</label>
                        <input type="text" class="form-control" placeholder="Describe your gig" name="gig_about">

                    </div>
                    <button type="submit" class="btn btn-success btn-lg">Submit</button>

                </form-method>
            </div>
        </div>
    </div>

</div>

